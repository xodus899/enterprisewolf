<p id="notice"><%= notice %></p>

<h1>Companies</h1>


<div class= "media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Manager</th>
          <th>Status</th>
          <th>Terms</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.manager %></td>
            <td><%= company.status %></td>
            <td><%= company.terms %></td>
            <td><%= link_to 'Show', company,class: " form-control btn btn-primary btn-mini" %></td>
            <td><%= link_to 'Edit', edit_company_path(company),class: " form-control btn btn-warning btn-mini" %></td>
            <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' },class: " form-control btn btn-danger btn-mini" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<h3> Import Companies </h3>
<%= form_tag import_companies_path, multipart: true do %>
<br>
  <%= file_field_tag :file %>
<br>
  <%= submit_tag "Upload Companies" %>
<% end %>
<br>
<%= link_to 'New Company', new_company_path, class: "btn btn-primary pull-right" %>

